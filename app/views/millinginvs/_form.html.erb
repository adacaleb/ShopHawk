<%= form_with(model: millinginv) do |form| %>
  <% if millinginv.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(millinginv.errors.count, "error") %> prohibited this millinginv from being saved:</h2>

      <ul>
        <% millinginv.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
